.gotop
    @extend $card
    position: fixed
    bottom: 157px
    left: 50%
    margin-left: 620px
    width: 40px
    height: 40px
    line-height: 40px
    text-align: center
    font-size: 1em
    color: #6a6a6a
    display: none
    transition: transform .3s linear, opacity .3s
    cursor: pointer
    &.show
        display: block
.footer
    padding: 50px 0
    text-align: center
    p
       font-size: 1em
       color: #6A6A6A
    a
       color: #6A6A6A
       text-decoration: underline

a
    
    text-decoration: none

input
    outline: none 
    border: none
    padding: 0

