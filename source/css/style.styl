body
  background: $color-background
  font: $font-size $font-sans
  -webkit-text-size-adjust: 100%

/* paginator */
.pagination
  padding: 40px 0
  font: 1.4rem Oswald-Regular
  display: flex
  justify-content: center
  .page-btn
    padding: 6px 12px
    margin: 0 10px
    border-radius: 100px
    font-size: 1em
    font-weight: 100
    color: #999
    display: flex
    align-items: center
    &:hover
      color: $color-default
    .iconfont
        font-size: .6em
